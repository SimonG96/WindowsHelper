<Application x:Class="WindowsHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WindowsHelper"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <!-- Color Theme -->
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperDarkStyle.xaml"/>
                 
                 <!-- Icon Templates -->
                 <ResourceDictionary Source="Resources/IconTemplates.xaml"/>
                 <ResourceDictionary Source="Spotify/Resources/SpotifyIconTemplates.xaml"/>
                 
                 <!-- Styles -->
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperButtonStyles.xaml"/>
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperTextBoxStyle.xaml"/>
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperScrollViewerStyle.xaml"/>
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperCheckBoxStyle.xaml"/>
                 <ResourceDictionary Source="Resources/Styles/WindowsHelperWindowStyle.xaml"/>

                 <!-- Notify Icon -->
                 <ResourceDictionary Source="NotifyIcon/NotifyIconResources.xaml"/>

                 <!-- Template Selectors -->
                 <ResourceDictionary Source="Spotify/ViewModels/Pages/SpotifyPagesTemplateSelector.xaml"/>
                 <ResourceDictionary Source="ToastNotification/Common/ToastTemplateSelector.xaml"/>

             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
